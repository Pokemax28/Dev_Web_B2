{% block body %}
<form action="/secretaire/Ajout_Inter.php" method="post">
  <header>
        <img src="/image/Accord_Energie2.png" alt="Accord Energie">
</header>

<br><br>
<br><br>
<div class="titre-intervention">Demande d'intervention</div>
<br><br>


<table class="table">
    <thead>
        <tr>
            <th>N° Demande</th>
            <th>Nom Utilisateur</th>
            <th>Prenom Utilisateur</th>
            <th>Degre D'urgence</th>
            <th>Date Intervention</th>
            <th>Description</th>
            <th>Choix Intervenant</th>
        </tr>
    </thead>
    <tbody>
    {% for intervention in interventions %}
        <tr>
            <td>{{ intervention.Id_Demande }}</td>
            <td>{{ intervention.nom }}</td>
            <td>{{ intervention.prenom }}</td>
            <td>{{ intervention.Degre_Urgence }}</td>
            <td>{{ intervention.date_intervention|date("Y-m-d H:i") }}</td>
            <td>{{ intervention.Description }}</td>
            <td>
                <select name="intervenant_id">
                    <option value="Choisir ">Sélectionnez un intervenant</option>
                    {% for intervenant in intervenants %}
                        <option value="{{ intervenant.id }}">{{ intervenant.prenom }} {{ intervenant.nom }}</option>
                    {% endfor %}
                </select>
                 <input type="hidden" name="id_Demande" value="{{ intervention.Id_Demande }}">
            <button type="submit" name="Choisir">Confirm</button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</from>

<a href = "/logout.php" class = "button" >Logout</a>


{% endblock %}
 


