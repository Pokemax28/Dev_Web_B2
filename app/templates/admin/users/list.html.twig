
{% block head %}
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .table {
            width: 100%;
            margin-bottom: 20px;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #dddddd;
        }
        .table th {
            background-color: #007bff;
            color: #ffffff;
            font-weight: bold;
        }
        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .table tbody tr:hover {
            background-color: #ddd;
        }

        .ban-btn {
        background-color: #ff4136; /* Couleur rouge */
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
    }

    .unban-btn {
        background-color: #2ecc40; /* Couleur verte */
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
    }

    .ban-btn:hover {
        background-color: #e82c20; /* Une teinte de rouge plus foncée */
    }

    .unban-btn:hover {
        background-color: #24a532; /* Une teinte de vert plus foncée */
    }

    
header {
            background-color: #0A2438;
            padding: 10px 0;
            text-align: center;
            color: #fff;
        }
        
        footer
        {
            background-color: #0A2438;
            padding: 10px 0;
            text-align: left;
            color: #fff;
        }

        header img {
            width: 125px; /* or any other size */
            height: auto;
        }
        
    .button {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    outline: none;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 15px;
    box-shadow: 0 9px #999;
    transition: all 0.3s;
}

.button:hover {background-color: #0056b3}

.button:active {
    background-color: #0056b3;
    box-shadow: 0 5px #666;
    transform: translateY(4px);
}
  .titre-admin {
    font-size: 24px; /* Taille de la police */
    font-weight: bold; /* Texte en gras */
    text-align: center; /* Centrer le texte si nécessaire */
}
    </style>
{% endblock %}

{% block body %}
<table class="table">
  <header>
        <img src="/image/Accord_Energie2.png" alt="Accord Energie">
</header>


<br><br>
<br><br>
<div class="titre-admin">Utilisateur de votre site</div>
<br><br>


    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Adresse</th>
            <th>N.Tel</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.nom }}</td>
            <td>{{ user.prenom }}</td>
            <td>{{ user.adresse }}</td>
            <td>{{ user.Ntel }}</td>
            {% if(user['Active'] == 1) %}
            
            <td>
                <form action="Ban.php" method="post">
                    <input type="hidden" name="id" value="{{ user.id }}">
                    <button type="submit" name="send" class="ban-btn">Bannir</button>
                </form>
            </td>
                
            {% else %}
            
            <td>
                <form action="/admin/Unban.php" method="post">
                    <input type="hidden" name="id" value="{{ user.id }}">
                    <button type="submit" name="send" class="unban-btn">Débannir</button>
                </form>
            {% endif %}
            
           
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

<a href = "/logout.php" class = "button" >Logout</a>
